<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaplan.pdma.fitpro.options">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="16"
        android:columnCount="17"
        android:orientation="horizontal"
        android:id="@+id/grid">

        <Button
            android:layout_width="174dp"
            android:layout_height="118dp"
            android:text="Basic Exercises"
            android:id="@+id/basic"
            android:layout_row="4"
            android:layout_column="5" />

        <Button
            android:layout_width="174dp"
            android:layout_height="118dp"
            android:text="Other Exercises"
            android:id="@+id/other"
            android:layout_row="4"
            android:layout_column="9" />

        <Button
            android:layout_width="174dp"
            android:layout_height="118dp"
            android:text="Men Fitness"
            android:id="@+id/men"
            android:layout_row="11"
            android:layout_column="5" />

        <Button
            android:layout_width="174dp"
            android:layout_height="118dp"
            android:text="Women Fitness"
            android:id="@+id/women"
            android:layout_row="11"
            android:layout_column="9" />

        <Button
            android:layout_width="174dp"
            android:layout_height="118dp"
            android:text="Body Mass Index"
            android:id="@+id/bmi"
            android:layout_row="14"
            android:layout_column="5" />

        <Button
            android:layout_width="174dp"
            android:layout_height="118dp"
            android:text="Finger Exercise"
            android:id="@+id/finger"
            android:layout_row="14"
            android:layout_column="9" />

    </GridLayout>

</RelativeLayout>
